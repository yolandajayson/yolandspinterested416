<p id="notice"><%= notice %></p>

<div class="panel panel-success">
    <div class="panel-heading"><h1>Listing Pins</h1></div>
    <div class="panel-heading">
</div>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:thumb) %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Destroy', pin, method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure?' } %></td>
      </tr>      
    <% end %>
      </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path, class: 'btn btn-success' %>
